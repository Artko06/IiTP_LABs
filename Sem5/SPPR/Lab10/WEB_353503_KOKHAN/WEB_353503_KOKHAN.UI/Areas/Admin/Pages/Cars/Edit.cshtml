@page
@model WEB_353503_KOKHAN.UI.Areas.Admin.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />

            <div class="form-group mb-3">
                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Car.Description" class="control-label"></label>
                <textarea asp-for="Car.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Car.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Car.CategoryId" class="control-label"></label>
                <select asp-for="Car.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Car.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Image" class="form-label">New Car Image</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="form-text">Select a new image (leave empty to keep current image)</div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Current Image</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Car.ImagePath))
                    {
                        <img src="@Model.Car.ImagePath" alt="@Model.Car.Name"
                             style="max-width: 300px; max-height: 200px;" class="img-thumbnail" />
                        <div class="form-text">@Model.Car.ImagePath</div>
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </div>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}