@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower() ?? string.Empty;
    var action = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower() ?? string.Empty;

    var area = ViewContext.RouteData.Values["area"]?.ToString()?.ToLower() ?? string.Empty;
    var page = ViewContext.RouteData.Values["page"]?.ToString()?.ToLower() ?? string.Empty;
}

<a class="navbar-brand" asp-controller="Home" asp-action="Index">WebLab10</a>
<div class="navbar-nav">
    <a class="nav-item nav-link @(controller == "home" && action == "index" ? "active" : "")"
       asp-controller="Home"
       asp-action="Index">Лб 10</a>
    <a class="nav-item nav-link @(controller == "car" && action == "index" ? "active" : "")"
       asp-controller="Car"
       asp-action="Index">Каталог</a>
    <a class="nav-item nav-link @(area == "admin" && page == "/cars/index" ? "active" : "")"
       asp-area="Admin"
       asp-page="/Cars/Index">Администрирование</a>
</div>
<div class="flex-grow-1"></div>
