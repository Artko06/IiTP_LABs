@page "/counter/{InitialCount:int?}"
@rendermode InteractiveServer
@using WEB_353503_KOKHAN.Blazor.SSR.Data

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<EditForm Model="@counterModel" OnValidSubmit="@SetCounter">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="counterInput">Set value to counter:</label>
        <InputNumber id="counterInput" @bind-Value="@counterModel.CounterValue"
                     class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Set value</button>
</EditForm>

@code {
    private CounterModel counterModel = new();
    private int currentCount = 0;

    [Parameter]
    public int? InitialCount { get; set; }

    private void IncrementCount()
    {
        currentCount++;
    }


    protected override void OnInitialized()
    {
        if (InitialCount.HasValue)
        {
            currentCount = InitialCount.Value;
        }
    }

    private void SetCounter()
    {
        currentCount = counterModel.CounterValue;
        counterModel = new CounterModel();
    }
}
